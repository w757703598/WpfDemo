<Window x:Class="MultiBinding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MultiBinding"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel Background="LightBlue">
        <TextBox x:Name="tb1" Height="25" Margin="5"></TextBox>
        <TextBox x:Name="tb2" Height="25" Margin="5"></TextBox>
        <TextBox x:Name="tb3" Height="25" Margin="5"></TextBox>
        <TextBox x:Name="tb4" Height="25" Margin="5"></TextBox>
        <Button x:Name="btn1" Content="Submit" Width="80" Margin="5"/>
    </StackPanel>
</Window>
